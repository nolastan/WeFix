%html
	%head
		%title WeFix
		= stylesheet_link_tag    "application", :media => "all"
		= javascript_include_tag "application"
		/ TODO: why does timeago only work if it's right here?
		/ = javascript_include_tag "jquery.timeago.js"
		= csrf_meta_tags
	%body
		#container.wide
			%header
				.account
					- if(cookies[:user_id] != nil)
						%p.logged_in= "Logged in as " + User.find(cookies[:user_id]).display_name
						%a.logout{:href => url_for(:action => 'logout', :controller => 'user')} Logout
					- else
						%a.login{:href => 'https://sandbox-wefix0001.taskrabbitdev.com/api/authorize?client_id=bF4O8pr2Q9f2OID2VocZJEgwMYCn834Qs3j8cmOp'}
							Login with Taskrabbit
				%h1.logo= link_to 'WeFix', :controller => 'home', :action => 'index'
				.city_selector
					Boston
			#content{:class => "#{controller.controller_name} #{controller.action_name}"}
				- if(flash[:error] != nil)
					.error= flash[:error]
				= yield
		%footer
			/ %p &copy; 2012 Stanford Rosenthal